<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primary_light"
    android:layout_height="match_parent" tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/donation_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/accent"
        android:fadingEdgeLength="10dp"
        android:title="Settings"
        android:elevation="4dp" />


    <fragment
        android:name="org.stuartresearch.snapzuisfunner.DonationActivity$DonationFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/donation_fragment"
        tools:layout="@android:layout/preference_category"
        android:layout_below="@+id/donation_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>