<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="1dp"
    android:id="@+id/comment_card">

    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:id="@+id/comment_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/md_white_1000">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:id="@+id/comment_title_banner"
                android:layout_margin="3dp"
                android:padding="2dp"
                android:layout_height="wrap_content"
                android:background="@drawable/op_banner">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:border_width="1dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_title"
                    style="@style/TextCommentTitleLarge" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/comment_children"
                    style="@style/TextCommentHiddenMedium" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/comment_paragraph"
                style="@style/TextCommentParagraphMedium" />


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>